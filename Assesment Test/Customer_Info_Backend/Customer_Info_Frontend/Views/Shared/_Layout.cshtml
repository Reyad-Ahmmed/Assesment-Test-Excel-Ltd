<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            padding-top: 55px;
        }
        .main {
            min-height: calc(100vh - 140px);
        }
        .navColor {
            background-color: #616B89;
        }
    </style>
    @RenderSection("styles",false)

</head>
<body>
    <nav class="navbar navbar-light navbar-expand-md shadow fixed-top navColor">
        <div class="container-fluid">
            <span class="navbar-brand text-white">Customer Information</span>
            <div class="navbar-collapse collapse ">
                <ul class="navbar-nav">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a></li>
                    <li class="nav-item"><a asp-controller="Customers" asp-action="Index" class="nav-link text-white">Customers</a></li>
                </ul>
                
            </div>
        </div>
    </nav>
    <div class="main">
        @RenderBody()
    </div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
